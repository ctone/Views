@using DiethelmTSWebsite2015.Core;
@model DiethelmTSWebsite2015.Models.HotelSearchResult
<div class="small-12  columns content-detail">
    <div class="row">
        <div class="small-12 columns hotel-awesome-deal-landing-img">
            <img onclick="GotoDetail('@Model.ServiceID')" src="@Model.Image" onerror="this.onerror = null; this.src = '/Images/Noimage.jpg';" title="@Model.HotelName" alt="@Model.HotelName" />
        </div>
        <div class="small-12 columns">
            <div class="row content-detail-title-small">
                <div class="small-12 columns">
                    <h5 onclick="GotoDetail('@Model.ServiceID')">@Model.HotelName</h5>
                </div>
                <div class="small-12 columns">
                    <img src="~/Images/@Model.Rating-star.png" title="@Model.Rating stars" alt="@Model.Rating stars" />
                </div>
                <div class="small-12 columns hotel-price">
                    from
                    <text> @Model.Currency @Math.Ceiling(Model.Price).ToString("#,##0") </text>
                </div>
                <div class="small-12  columns">
                    <span class="content-detail-desc">@Utility.GetShortTextNoHTML(HttpUtility.HtmlDecode(Model.HotelDescription))</span>
                </div>
                <div class="small-12  columns">
                    <span class="link-readmore" onclick="GotoDetail('@Model.ServiceID')">read more</span>
                </div>
            </div>
        </div>
    </div>
</div>
