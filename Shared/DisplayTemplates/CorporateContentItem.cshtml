@model DiethelmTSWebsite2015.Models.SysPost

<div class="medium-4 large-4 columns center content-3-box">
    <img src="@Model.Image" onerror="this.onerror = null; this.src = '/Images/Noimage.jpg';" />
    <h5 class="content-3-box-subject">@Model.Title</h5>
    <span class="content-data">@Model.ShortDescription</span>
    <button class="readmore-button">Read more</button>
</div>